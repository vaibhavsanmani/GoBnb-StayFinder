<%layout("/layouts/boilerplate")%>

<div class="row">
    <div class="col-8 offset-2">

   
<div>
    <h3 class="col-6 offset-2">Listing Details</h3>
    </div>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image.url || '/images/default.jpg' %>" class="card-img-top show-img" alt="Listing Image">
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br>
            <%=listing.description%><br>
            &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.country%> ,<%=listing.location%>          

        </p>
        </div>
    </div>
    <br>
    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-2 edit">Edit</a>
        <br><br>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark delete">Delete</button>
        </form>
    </div>  
</body>
</div>