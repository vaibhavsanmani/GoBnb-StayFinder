<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <h2 class="text-center mb-4 fw-bold text-dark">Listing Details</h2>

      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <img src="<%= listing.image.url || '/images/default.jpg' %>" 
             class="card-img-top object-fit-cover" 
             alt="Listing Image"
             style="height: 300px;">

        <div class="card-body p-4">
          <h4 class="fw-bold mb-2 text-primary"><%= listing.title %></h4>
          <p class="text-muted mb-3"><%= listing.description %></p>

          <p class="fs-5 mb-1">
            <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %>
          </p>
          <p class="text-secondary">
            <i class="bi bi-geo-alt"><b></i> <%= listing.location %>, <%= listing.country %></b>
          </p>

          <hr class="my-3">

          <div class="d-flex justify-content-between mt-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary px-4 py-2 rounded-pill fw-semibold">
              <i class="bi bi-pencil-square"></i> Edit
            </a>
            
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button type="submit" class="btn btn-outline-danger px-4 py-2 rounded-pill fw-semibold">
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
