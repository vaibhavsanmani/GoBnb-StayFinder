<% layout("/layouts/boilerplate") %>

<div class="container py-5">

  <!-- LISTING CARD -->
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <h2 class="text-center mb-4 fw-bold text-dark">
        <%= listing.title %>
      </h2>

      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <img 
          src="<%= listing.image.url || '/images/default.jpg' %>" 
          class="card-img-top object-fit-cover" 
          style="height:300px;"
        >

        <div class="card-body p-4">
          <p class="text-muted"><%= listing.description %></p>

          <p class="fs-5 mb-1">
            <strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN") %>
          </p>

          <p class="text-secondary">
            <i class="bi bi-geo-alt-fill"></i>
            <b><%= listing.location %>, <%= listing.country %></b>
          </p>

          <hr>

          <div class="d-flex justify-content-between">
            <a 
              href="/listings/<%= listing._id %>/edit"
              class="btn btn-outline-primary rounded-pill px-4">
              Edit
            </a>

            <form 
              method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-outline-danger rounded-pill px-4">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- REVIEW SECTION -->
  <div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">

      <hr>
      <h4 class="mb-3">Leave a Review</h4>

      <form 
        action="/listings/<%= listing._id %>/reviews"
        method="POST">

        <div class="mb-3">
          <label class="form-label">Rating</label>
          <input 
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            class="form-range">
        </div>

        <div class="mb-3">
          <label class="form-label">Comment</label>
          <textarea
            name="review[comment]"
            rows="3"
            class="form-control"
            required>
          </textarea>
        </div>

        <button class="btn btn-dark btn-sm">Submit</button>
      </form>

      <hr class="my-4">

      <h5>All Reviews</h5>

      <div class="row">
        <% for(let review of listing.reviews){ %>

          <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h6 class="card-title m-1">Jane Doe</h6>
                <p class="card-text m-1"><%= review.comment %></p>
                <small class="text-muted m-1">
                  Rating: <%= review.rating %> ⭐
                </small>

                <form
                  method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  class="mt-2">

                  <button class="btn btn-sm btn-dark m-2">
                    delete
                  </button>
                </form>
              </div>
            </div>
          </div>

        <% } %>
      </div>

    </div>
  </div>

</div>
