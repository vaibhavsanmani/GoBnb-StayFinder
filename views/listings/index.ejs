<%layout("/layouts/boilerplate")%><%= success %>
<body>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" > 
<%for(let listings of allListings){%>
    <a href="listings/<%=listings._id%>" class="listing-link" >
        <div class="card col listing-card">
            <img src="<%=listings.image.url%>" target="_blank" onerror="this.src='/images/default.jpg'" class="card-img-top" alt="..." style="height: 20rem;">
            <div class="card-body">
            <div class="card-img-overlay">
                <h5 class="card-title"><%=listings.title%></h5>
                <p class="card-text"><%=listings.description%></p>
            </div>
            <p class="card-text">
                <b><%=listings.title%></b><br> 
                &#8377;<%= listings.price?.toLocaleString("en-IN") || "N/A" %>/night</p><br>
            </div>
      </div>
    </a>
<%}%>
</div>
</body>


