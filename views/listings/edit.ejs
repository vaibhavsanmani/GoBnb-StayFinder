<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    
                    <h4 class="mb-4 fw-semibold text-center">Edit Listing</h4>

                    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>

                        <div class="mb-3">
                            <input 
                                name="listing[title]" 
                                value="<%= listing.title %>" 
                                class="form-control rounded-3" 
                                type="text" 
                                placeholder="Title"
                                required>
                        </div>

                        <div class="mb-3">
                            <textarea 
                                name="listing[description]" 
                                class="form-control rounded-3" 
                                rows="3"
                                placeholder="Description"
                                required><%= listing.description %></textarea>
                        </div>

                        <div class="mb-3">
                            <input 
                                name="listing[image]" 
                                value="<%= listing.image %>" 
                                class="form-control rounded-3" 
                                placeholder="Image URL"
                                required>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <input 
                                    name="listing[price]" 
                                    value="<%= listing.price %>" 
                                    class="form-control rounded-3" 
                                    placeholder="Price"
                                    required>
                            </div>

                            <div class="col-md-8 mb-3">
                                <input 
                                    name="listing[country]" 
                                    value="<%= listing.country %>" 
                                    class="form-control rounded-3" 
                                    placeholder="Country"
                                    required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <input 
                                name="listing[location]" 
                                value="<%= listing.location %>" 
                                class="form-control rounded-3" 
                                placeholder="Location"
                                required>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-dark rounded-3 py-2">
                                Update Listing
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
